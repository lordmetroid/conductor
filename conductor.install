post_install() {
	id conductor &>/dev/null || \
		useradd -r -c "Conductor daemon" -g daemin -d /var/lib/conductor -s /bin/false conductor
	mkdir -p /var/run/conductor
	chown -R conductor.daemon /etc/conductor
	chown -R conductor.daemon /var/{lib,log,run}/conductor
}

post_remove() {
	userdel conductor &>/dev/null
}
